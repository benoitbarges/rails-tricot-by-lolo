<h2>Cart show</h2>
<ul>
  <% @cart.order_products.each do |order_product| %>
    <li>Product: <%= order_product.product.name %>/ Price: <%= order_product.product.price %>/ Quantity: <%= order_product.quantity %>/ Total Price: TODO %>
    # See lineItem section below for explanation of order_product links
    <ul>
      <li>
        <%= link_to "Add one", order_product_add_path(:id => order_product), method: :post %>
        <%= link_to "Reduce one", order_product_reduce_path(:id => order_product), method: :post %>
      </li>
      <li>
        <%= link_to "Remove item", order_product_path(order_product), method: :delete %>
      </li>
    </ul>
    #
  <% end %>
</ul>
