<div class="products-container">
  <div class="products">
    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div class="product-card">
          <% if product.photo.present? %>
            <%= cl_image_tag product.photo.key, height: 500, width: 500, gravity: :auto, crop: :fill %>
          <% else %>
            <span>no images</span>
          <% end %>
          <div class="content">
            <span class="name">
              <%= product.name %>
            </span>
            <% if product.available %>
              <span>
                <%= product.price %>
              </span>
            <% else %>
              <div class="not-available">
                <span class="amount">
                  <%= product.price %>
                </span>
                <span class="sold-out">
                  <p>sold out</p>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
