<div class="more-info">
  <h2>Vos informations</h2>
  <%= simple_form_for @order do |f| %>
  <div class="first-last">
    <%= f.input :first_name, input_html: {value: current_user.first_name}, label: false %>
    <%= f.input :last_name, input_html: {value: current_user.last_name}, label: false %>
  </div>
    <%= f.input :email, input_html: {value: current_user.email}, label: false %>
    <%= f.input :phone_number, placeholder: "Numéro de téléphone", label: false %>
    <%= f.input :address1, placeholder: "Adresse", label: false %>
    <%= f.input :address2, placeholder: "Complément d'adresse (facultatif)", label: false %>
  <div class="code-city">
    <%= f.input :postcode, placeholder: "Code postal", label: false %>
    <%= f.input :city, placeholder: "Ville", label: false %>
  </div>
</div>
<div class="cart-checkout">
  <h2>
    Résumé
  </h2>
  <div class="checkout-total">
    <span>
      Total:
    </span>
    <span>
      <%= humanized_money_with_symbol(@current_cart.sub_total) %>
    </span>
  </div>
    <%= f.submit "Réglement", class: 'add-to-cart-btn' %>
</div>
<% end %>
