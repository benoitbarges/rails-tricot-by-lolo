<%= render'shared/banner' %>
<div class="container mt-5 mb-5">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-12 col-md-6 col-lg-4 mb-5">
        <%= link_to product_path(product) do %>
          <div class="product-card">
            <%= cl_image_tag product.photo.key %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
